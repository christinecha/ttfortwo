{{> ../partials/html-start.hbs page="map" }}

<section class="intro">
  <h1>
    <img src="/assets/map.png" alt="Map" />
    <img src="/assets/map-info.png" alt="Where we've played" />
  </h1>

  <div class="content center">
    <div class="content-inner">
      <section class="map" data-is-active="true">
        <img src="/assets/map-border.png" />
        <div class="proportional-spacer"></div>
        <div id="mapbox-container"></div>
      </section>

      <section class="list">
        <ul>
          {{#each clubs}}
            <li class="club" data-slug="{{this.slug}}">
              {{ this.name }}

              <span class="tags">
                {{#each this.tags}}
                  <label>
                    {{this}}
                  </label>
                {{/each}}
              </span>
         
            </li>
          {{/each}}
        </ul>
      </section>
    </div>

    <div class="map-tools">
      <button class="map-view-button">map view</button><button class="list-view-button">list view</button>
      <p>filter | sort</p>
    </div>
  </div>
</section>

{{> ../partials/html-end.hbs }}
