{{> ../partials/html-start.hbs page="map" }}

<section>
  <div class="club-map">
    <div id="mapbox-container"></div>
  </div>

  <div class="club-list-outer">
    <div 
      id="active-club-info" 
      data-is-open="{{#if activeClub}}true{{else}}false{{/if}}"
    >
      {{#if activeClub}}
        {{> ../partials/club-info.hbs club=activeClub }}
      {{/if}}
    </div>

    <div id="club-list">
      <p data-type="body-xs"><em>Here is a list of all the table tennis clubs we've visited around the world - {{clubs.length}} in total so far. Where should we go next?</em></p>
    </div>
  </div>
</section>

{{> ../partials/html-end.hbs }}
